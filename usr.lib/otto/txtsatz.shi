# txtsatz.shi: Basic typesetting libary for POSIX Shell Script.

export BOLD='\033[1m'
export UNDERLINE='\033[4m'
export BOLD_UNDERLINE='\033[1;4m'
export BLINK='\033[5m'
export DARKEN='\033[2m'
export INVERT='\033[7m'
export END='\033[m'

printERR(){
  printf '%b\n' "${RED}* ERROR${END}: ${@}"
}
printWAR(){
  printf '%b\n' "${YELLOW}* WARNING${END}: ${@}"
}
printOK(){
  printf '%b\n' "${GREEN}* O.K.${END}: ${@}"
}
